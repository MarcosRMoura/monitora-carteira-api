<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="marcos.moura" id="20210117011200-1">
        <createTable tableName="TB_USUARIO" remarks="Tabela que armazena os usuários">
            <column name="ID" type="BIGINT" remarks="Identificador do Usuário">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_NOME" type="VARCHAR(50)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_CPF" type="VARCHAR(20)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_SEXO" type="VARCHAR(10)">
            </column>
            <column name="DT_NASCIMENTO" type="DATE">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_ENDERECO" type="VARCHAR(50)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="NU_ENDERECO" type="VARCHAR(10)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_BAIRRO" type="VARCHAR(20)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_CIDADE" type="VARCHAR(20)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="NU_CEP" type="VARCHAR(10)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_ESTADO" type="VARCHAR(20)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_PAIS" type="VARCHAR(10)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_TELEFONE" type="VARCHAR(15)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_EMAIL" type="VARCHAR(20)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="TB_USUARIO" columnNames="ID"
                       constraintName="PK_TB_USUARIO"/>
        <createSequence sequenceName="SEQ_TB_USUARIO" startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog> 