<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="marcos.moura" id="20210117100000-1">
        <createTable tableName="TB_NEGOCIACAO" remarks="Tabela que armazena os negociações">
            <column name="ID" type="BIGINT" remarks="Identificador da Negociação">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_TIPO_NEGOCIACAO_BASE" type="VARCHAR(10)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TX_TIPO_NEGOCIACAO" type="VARCHAR(10)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="NUM_CONTRATO" type="INT">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="VL_BRUTO" type="FLOAT">
            </column>
            <column name="VL_TAXAS" type="FLOAT">
            </column>
            <column name="VL_LIQUIDO" type="FLOAT">
            </column>
            <column name="TX_RESULTADO" type="VARCHAR(10)">
            </column>
            <column name="DT_INICIO_NEGOCIACAO" type="DATE">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="DT_FIM_NEGOCIACAO" type="DATE">
            </column>
            <column name="VL_ENTRADA" type="FLOAT">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="VL_SAIDA" type="FLOAT">
            </column>
            <column name="VL_PRECO_MEDIO" type="FLOAT">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="NUM_QTD_COMPRA" type="INT">
            </column>
            <column name="NUM_QTD_VENDA" type="INT">
            </column>

        </createTable>

        <addPrimaryKey tableName="TB_NEGOCIACAO" columnNames="ID"
                       constraintName="PK_TB_NEGOCIACAO"/>
        <createSequence sequenceName="SEQ_TB_NEGOCIACAO" startValue="1" incrementBy="1"/>
    </changeSet>
</databaseChangeLog> 